{
  "name": "nova-corrente-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev -p 3003 --turbo",
    "dev:npm": "next dev -p 3003",
    "dev:fast": "bun --bun next dev -p 3003 --turbo",
    "build": "bun --bun next build",
    "build:npm": "next build",
    "build:analyze": "ANALYZE=true bun --bun next build",
    "start": "bun --bun next start -p 3003",
    "start:npm": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:validation": "jest --testPathPattern=validation",
    "test:validation:watch": "jest --testPathPattern=validation --watch",
    "test:5g": "jest --testPathPattern=5g --coverage",
    "test:5g:watch": "jest --testPathPattern=5g --watch",
    "test:5g:chart": "jest --testPathPattern=FiveGExpansionChart",
    "test:5g:page": "jest --testPathPattern=5g-page",
    "test:5g:integration": "jest --testPathPattern=5g-feature",
    "watch:logs": "node scripts/watch-console-mcp.js",
    "watch:logs:mcp": "bash scripts/watch-with-mcp.sh",
    "type-check": "tsc --noEmit",
    "validate": "node scripts/validate.js",
    "validate:quick": "npm run type-check && npm run lint && npm test --passWithNoTests",
    "validate:full": "npm run validate",
    "pre-push": "npm run validate:full",
    "prepare": "npm run validate:quick || true"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.7",
    "clsx": "^2.1.1",
    "d3": "^7.8.0",
    "next": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-katex": "^3.0.0",
    "recharts": "^2.8.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/recharts": "^1.8.25",
    "autoprefixer": "^10.4.16",
    "critters": "^0.0.23",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.3.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "whatwg-fetch": "^3.6.20"
  }
}
